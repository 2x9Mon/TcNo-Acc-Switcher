                        <TextBlock FontSize="9" TextAlignment="Center" FontWeight="Normal">76561198064588130</TextBlock>
                    </StackPanel>
                </Button>
            </ListBoxItem>
        </ListBox>-->

        <!-- Row 2: Footer -->
        <Border Grid.Row="2" Background="#222222"/>
        <Label Name="lblStatus" Grid.Row="2" HorizontalAlignment="Left" Margin="5px" VerticalAlignment="Center" Foreground="White" Content="Status: Starting"/>
        <!--<ProgressBar Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5px 0 0 0" Width="100px" Height="10px" Background="#333333" Foreground="White"/>-->
        <Button Name="btnLogin" IsEnabled="False" Content="Login" HorizontalAlignment="Right" Grid.Row="2" Margin="5px" VerticalAlignment="Center" Foreground="White" Style="{StaticResource LoginButton}" PreviewMouseDown="LoginMouseDown"/>

        <Border Grid.Row="3" Background="#222222"/>
        <CheckBox Margin="5px" Grid.Row="3" Foreground ="White" Content="Run Steam as Admin" VerticalAlignment="Center" IsChecked="{Binding startAsAdmin, Mode=TwoWay}"/>
    </Grid>
</Window>
