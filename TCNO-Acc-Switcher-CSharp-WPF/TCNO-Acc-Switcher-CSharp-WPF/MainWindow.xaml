        </Canvas>
        <Button Grid.Row="0" Content="-" HorizontalAlignment="Right" Background="#2B2D40" Margin="0 0 30px 0" Width="30px" Height="30px" Style="{StaticResource MinimizeButton}"></Button>
        <Button Grid.Row="0" Content="X" HorizontalAlignment="Right" Background="#363952" Width="30px" Height="30px" Style="{StaticResource ExitButton}"></Button>

        <!-- Row 1: Main content -->
        <ListBox Grid.Row="1" Background="#28293A" ScrollViewer.HorizontalScrollBarVisibility="Disabled" VerticalContentAlignment="Top">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <Button Style="{StaticResource UserAccount}"></Button>
            <Image Width="50px" Height="50px"></Image>
            <Image Width="50px" Height="50px"></Image>
            <Image Width="50px" Height="50px"></Image>
            <Image Width="50px" Height="50px"></Image>
        </ListBox>

        <!-- Row 2: Footer -->
        <Border Grid.Row="2" Background="#222222"/>
        <Button Content="Login to selected user" HorizontalAlignment="Right" Grid.Row="2" Margin="5px" VerticalAlignment="Center" Foreground="White" Style="{StaticResource LoginButton}" Click="Button_Click"/>

    </Grid>
</Window>
