        <!-- Row 2: Footer -->
        <Border Name="BottomDropshadow" Grid.Row="2" Height="10" VerticalAlignment="Top" Panel.ZIndex="2" Background="#222222">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                      ShadowDepth="2"
                      Direction="90"
                      Opacity="0.8"
                     BlurRadius="4"/>
            </Border.Effect>
        </Border>
    </Grid>
</Window>

