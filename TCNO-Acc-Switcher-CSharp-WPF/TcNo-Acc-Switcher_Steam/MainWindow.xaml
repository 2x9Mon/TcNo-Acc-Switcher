                        </Button>
                        <Button BorderBrush="Gray" BorderThickness="1.5" HorizontalAlignment="Right" Grid.Row="2" Width="34" Height="34" Margin="0 0 5 0" Name="btnShowInfo" Click="btnShowInfo_Click" Style="{StaticResource mainMenuButtons}">
